QWidget {
    font-family: 'Segoe UI';
    font-size: 14px;
}

QPushButton {
    background-color: #0078d7;
    color: white;
    padding: 6px 12px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #005fa1;
}

QLineEdit {
    padding: 6px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

QLabel {
    font-weight: bold;
}
