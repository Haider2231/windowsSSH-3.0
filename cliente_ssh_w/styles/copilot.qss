QTextEdit {
    background: #23272e;
    color: #e6e6e6;
    font-family: 'Fira Mono', 'Consolas', 'Menlo', 'Monaco', 'monospace';
    font-size: 15px;
    border-radius: 8px;
    border: 1px solid #444;
    padding: 12px;
    line-height: 1.5;
}

QLineEdit {
    border-radius: 4px;
    border: 1px solid #ccc;
    padding: 6px;
}

QPushButton {
    background-color: #0078d7;
    color: white;
    border-radius: 5px;
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: #005fa1;
}
